{
  "name": "kitty-reminder",
  "productName": "Kitty Reminder",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "build:all": "electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "reminder",
    "electron",
    "productivity"
  ],
  "author": {
    "name": "Kitty Reminder",
    "email": "kitty@reminder.app"
  },
  "license": "ISC",
  "description": "Cute kitty reminder app - Timely reminders for water and breaks",
  "build": {
    "appId": "com.kitty.reminder",
    "productName": "Kitty Reminder",
    "publish": null,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/cat.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/cat.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/cat.png",
      "category": "Utility"
    },
    "dmg": {
      "title": "Kitty Reminder",
      "icon": "assets/cat.icns",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 144,
          "y": 180
        },
        {
          "x": 396,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
